<div>詳細ページ</div>

<%= @post.content %>
<div>
  <% @post.tags.each do |tag| %>
    <%= tag.name %>
  <% end %>
</div>
<div><%= link_to "編集", edit_post_path(@post) %></div>
<div><%= link_to "削除",post_path(@post), method: :delete %></div>
<div><%= link_to "戻る", root_path %></div>

<div class="container mt-5">
  <div class="row">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
      編集する
    </button>
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">投稿を編集</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for @post,remote: true do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :content , "投稿内容" %>
            <%= f.text_field :content, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :content , "タグ" %>
            <%= f.text_field :tag_ids, value: @tag_list,class: "form-control col-10", id:'tag_ids',placeholder: "タグをつける。複数つけるには','で区切ってください。" %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= f.submit "編集する",class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>